
class Calculadora():
	def __init__(self):
		print("Hola")
        
	def suma(self, a,b):
		return a+b

	def resta(self, a,b):
		return a-b

	def funcionar(self):
		print("Que n√∫mero deseas sumar:");
		numero1 = int(input())
		numero2 = int(input())

		print("El Total es:",self.suma(numero1,numero2) )
		print("La Diferencia es:",self.resta(numero1,numero2))
     


Calc = Calculadora()

Calc.funcionar()
